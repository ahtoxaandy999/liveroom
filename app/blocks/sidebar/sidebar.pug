.sidebar.js-sidebar.js-active
    a(href="#").sidebar__opener.js-opener
        .sidebar__opener-icon
            img(src="images/icons/font/icon-arrow.svg", alt="")
        .sidebar__opener-text.m-y-15
            span Показать комментарии
    .sidebar__wrap
        .sidebar__head
            a(href="#").link.secondary.js-close
                img(src="images/icons/font/icon-arrow.svg", alt="")
                span Скрыть комментарии
        .sidebar__body.sidebar__body--comments.scroll-wrap
            .sidebar__content
                .sidebar__empty
                    .calendar-icon
                        img(src="images/note-icon.png", alt="")
                    p.base-text Пока нет сообщений
            .sidebar__form.m-t-a.p-t-15
                form.search-form(action="#")
                    .search-form__wrap.flex.flex--aie
                        .comment-input.m-r-1
                            .comment-input__area-wrap
                                textarea.js-textarea.search-form__input.p-l-15(placeholder="Ваше сообщение" value="Я, если честно" row="1")
                            button.comment-input__smile.icon-animate
                                img(src="images/icons/font/icon-smile.svg" alt="image description")
                        button.btn.primary.comment-submit
                            include ../icons/arrow-lg